pipeline {
    agent any
    stages {
        stage('Pull Code from Git') {
            steps {
                sh 'echo "checkout done"'            }
        }
        stage('Build') {
            steps {
                sh 'npm install'
                sh 'npm run build'
                sh 'cp -r build/* /opt/deployment/react'
            }
        }
        stage('Deploy') {
            steps {
                sh 'cd /opt/deployment/react'
                sh 'pm2 serve /opt/deployment/react 3000 --name "react-todo-app -f"'
            }
        }

        stage('Upload to S3') {
            steps {
                withAWS(credentials: 'SECRET') {
                    s3Upload(bucket: 'viamagous', file: '/opt/deployment/react')
                }
            }
        }
    }
}
