pipeline {
    agent any
    stages {
        stage('Pull Code from Git') {
            steps {
                sh 'echo "checkout done"'            }
        }
        stage('Build') {
            steps {
                sh 'npm install'
                sh 'npm run build'
                sh 'cp -r build/* /opt/deployment/react'
            }
        }
        stage('Deploy') {
            steps {
                sh 'cd /opt/deployment/react'
                sh 'pm2 /opt/deployment/react 3000 --name "react-todo-app"'
            }
        }
    }
}
